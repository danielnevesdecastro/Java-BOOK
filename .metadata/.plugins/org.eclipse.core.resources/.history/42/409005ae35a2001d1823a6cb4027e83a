package metodo;

public class Aeronave {

	int totalAssentos;
	int assentosReserv;
	//altera a variável de instância 
	void reservarAssentos(int numeroAssentos) {
		assentosReserv += numeroAssentos;
	}
	
	int calcularAssentosDispo() {
		return totalAssentos - assentosReserv;
	}
	
	void alterarTotalAssentos (int totalAssentos) {
		//objeto this, 
		this.totalAssentos = totalAssentos;
	}
}
